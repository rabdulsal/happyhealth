<h1>HappyHealth's Affiliate Offices</h1>
  <div id="accordion">
      <% @offices.each do |office| %>
        <h3>
            <a href="#"><%= office.name %></a>
        </h3>
        <div>
          <p>
            <b>Address:</b>
            <%= office.address %>
          </p>
          <p>
            <b>City:</b>
            <%= office.city %>
          </p>
          <p>
            <b>State:</b>
            <%= office.state %>
          </p>
          <p>
            <b>Zipcode:</b>
            <%= office.zipcode %>
          </p>
          <p>
            <b>Phone Number:</b>
            <%= office.phone %>
          </p>
          <p>
            <b>Fax Number:</b>
            <%= office.fax %>
          </p>
          <p>
             <i><%= link_to 'Go to Office Details >>', office %></i>
          </p>
          <ul class="inline-block">
            <li>
              <button value=<%= office.id %> id="appt" class="createButton inline">View Office Form</button>       
            </li>
            <li>
              <p id="edit-form"><!-- Real Button -->                
                <%= link_to "Download PDF", office_pdf_path(office.id, :office => office.form_name, :format => "pdf"), :class => "pdfButton inline" %>
              </p>
