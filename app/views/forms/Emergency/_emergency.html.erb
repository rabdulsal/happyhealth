<% index = 1%>
<%= f.fields_for :emergencies, form.emergencies do |builder| %>
	<fieldset class="demoBackground">
	<legend>Emergency Contact #<%= index %></legend>	
	<li>
		<table>
			<tr class="table_row_third">
				<td>
					<%= builder.label :name %>
					<%= builder.text_field :name, :class => "form_field_length" %>
				<!-- </li>
				<li> -->
				</td>
				<td>
					<%= builder.label :relationship_to_patient %>
					<%= builder.text_field :relationship_to_patient, :class => "form_field_length" %>
				<!-- </li>
				<li> -->
				</td>
				<td>
					<%= builder.label :phone_number %>
					<%= builder.text_field :phone_number, :class => "form_field_length" %>
				</td>
			</tr>
		</table>
	</li>
	<li class="table_row_full">
		<%= builder.label :address %>
		<%= builder.text_field :address, :class => "form_field_length_full" %>
	</li>
	<li>
		<table>
			<tr class="table_row_third">
				<td>
					<%= builder.label :city %><%= builder.text_field :city, :class => "form_field_length" %>
				<!-- </li>
				<li> -->
				</td>
				<td>
					<%= builder.label :state %><%= builder.select :state, options_for_select(us_states.each.map { |state| [state[:abrv]]}, form.emergencies[index-1].state) %>
				<!-- </li>
				<li> -->
				</td>
				<td>
					<%= builder.label :zipcode %>
					<%= builder.text_field :zipcode, :class => "form_field_length" %>
				</td>
		</table>
	</li>
	</fieldset>
	<% index+=1%>
<% end %>

