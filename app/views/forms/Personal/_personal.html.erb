<fieldset id="personal-info" class="demoBackground">
<legend>Personal Information</legend>
<%= f.fields_for :personal do |builder| %>
	
		<li>
			<table>
				<tr class="table_row_third">
					<td>	
						<label>First Name</label>
						<%= builder.text_field :first_name, :placeholder => "John", :class => "form_field_length" %>
					</td>
					<!-- </li>
					<li> -->
					<td>	
						<label>Middle Init.</label>
						<%= builder.text_field :middle_initial, :placeholder => "M", :class => "form_field_length" %>
					</td>
					<!-- </li>
					<li> -->
					<td>	
						<label>Last Name</label>
						<%= builder.text_field :last_name, :placeholder => "Doe", :class => "form_field_length" %>
					</td>
				</tr>
			</table>
		</li>
		<li>
			<table>
				<tr class="table_row_half"><!-- was "table_row_fourth" -->
					<td>
						<label>Date of Birth</label>
						<%= builder.text_field :date_of_birth, :placeholder => "01-01-2000", :class => "form_field_length" %>
					<!-- </li>
					<li>
					</td>
					<td>
						<label>Age</label>
						<%#= builder.number_field :age, :in => 1...99, class: "form_field_length" %>
					 </li>
					<li> -->
					</td>
					<td>
						<%= builder.label :gender %> 
						Male: <%= builder.radio_button :gender, "Male" %>
						Female: <%= builder.radio_button :gender,  "Female" %>
					</td>
				</tr>
			</table>
		</li>
		<!-- <li class="table_row_full">
			<label>Social Security Number (optional)</label>
						<%#= builder.text_field :ss_number, class: "form_field_length_full", :placeholder => "123-45-6789" %>
			
		</li> -->
		<li class="table_row_full"><%= builder.label :address %><%= builder.text_field :address, :class => "form_field_length_full" %></li>	
		<li>
			<table>
				<tr class="table_row_third">
					<td>
						<%= builder.label :city %>
						<%= builder.text_field :city, :class => "form_field_length" %>
					<!-- </li>
					<li> -->
					</td>
					<td>
						<%= builder.label :state %>
						<%= builder.select :state, options_for_select(us_states.each.map { |state| [state[:abrv]]}, form.personal.state), :class => "form_field_length" %>
					<!-- </li>
					<li> -->
					</td>
					<td>
						<%= builder.label :zip_code %>
						<%= builder.text_field :zip_code, :class => "form_field_length" %>
					</td>
				</tr>
			</table>
		</li>
		<li>
			<table>
				<tr class="table_row_half">
					<td>
						<%= builder.label :home_phone %>
						<%= builder.text_field :home_phone, :class => "form_field_length" %>
					<!-- </li>
					<li> -->
					</td>
					<td>
						<%= builder.label :cell_phone %>
						<%= builder.text_field :cell_phone, :class => "form_field_length" %>
					<!-- </li>
					<li> -->
					</td>
				</tr>
				<tr class="table_row_half">
					<td>
						<%= builder.label :work_phone %>
						<%= builder.text_field :work_phone, :class => "form_field_length" %>
					<!-- </li>
					<li> -->
					</td>
					<td>
						<label>Email Address</label>
						<%= builder.text_field :email_address, :class => "form_field_length" %>
					</td>
				</tr>
			</table>
		</li>
		<li>
			<table>
				<tr class="table_row_third">
					<td>
						<%= builder.label :marital_status %>
						<%= builder.radio_button :marital_status,  "Single" %>Single<br />
						<%= builder.radio_button :marital_status,  "Married" %>Married<br />
						<%= builder.radio_button :marital_status,  "Widowed" %>Widowed<br />
						<%= builder.radio_button :marital_status,  "Divorced" %>Divorced<br />
					</td>
					<!-- </li>
					<li> -->
					<td>
						<%= builder.label :race %>
						<%= builder.radio_button :race,  "White/Caucasian" %>White/Caucasian<br />
						<table>
							<tr class="radio_button">
								<td>
									<%= builder.radio_button :race,  "American Indian/Alaskan Native" %>
								</td>
								<td>
									American Indian/Alaskan Native
								</td>
							</tr>
						</table>
						<%= builder.radio_button :race,  "Black or African American" %>Black or African American
						<table>
							<tr class="radio_button">
								<td>
									<%= builder.radio_button :race,  "Native American/Other Pacific Islander" %>
								</td>
								<td>
									Native American/Other Pacific Islander
								</td>
							</tr>
						</table>
						<%= builder.radio_button :race,  "Asian" %>Asian<br />
						<%= builder.radio_button :race,  "I prefer not to answer" %>I prefer not to answer
						<%#= builder.label :other %>
						<%#= builder.text_field :race, :class => "employer" %>
					</td>	
					<td>
						<%= builder.label :ethnicity %>
						<%= builder.radio_button :ethnicity,  "Hispanic" %>Hispanic<br />
						<%= builder.radio_button :ethnicity,  "Non-Hispanic" %>Non-Hispanic<br />
						<%= builder.radio_button :ethnicity,  "Unknown" %>Unknown<br />
						<%= builder.radio_button :ethnicity,  "I prefer not to answer" %>I prefer not to answer
					</td>
					<!-- </li>
					<li> -->					
				</tr>
			</table>
		</li>
		<li>
			<table>
				<tr class="table_row_third">
					<td>
						<%= builder.label :employer %>
						<%= builder.text_field :employer, :class => "form_field_length" %>
					<!-- </li>
					<li> -->
					</td>
					<td>
						<%= builder.label :occupation %>
						<%= builder.text_field :occupation, :class => "form_field_length" %>
					<!-- </li>
					<li> -->
					<td>
						<label>Employment Status</label>
						<%= builder.radio_button :employment_status,  "Full-time" %>Full-time <br />
						<%= builder.radio_button :employment_status,  "Part-time" %>Part-time <br />
						<%= builder.radio_button :employment_status,  "Not-employed" %>Not-employed
					</td>
				</tr>
			</table>
		</li>
		<li>
			<table>
				<tr class="table_row_half">
					<td>
						<label>Work Address</label>
						<%= builder.text_field :work_address, :class => "form_field_length" %>
					<!-- </li>
					<li> -->
					</td>
					<td>
						<label>Employer Phone</label>
						<%= builder.text_field :employer_phone, :class => "form_field_length" %>
					</td>
				</tr>
			</table>
		</li>
		<li>
			<table>
				<tr class="table_row_third">
					<td>
						<label>Employer City</label>
						<%= builder.text_field :employer_city, :class => "form_field_length" %>
					<!-- </li>
					<li> -->
					</td>
					<td>
						<label>Employer State</label>
						<%= builder.select :employer_state, options_for_select(us_states.each.map { |state| [state[:abrv]]}, form.personal.employer_state) %>
					<!-- </li>
					<li> -->
					</td>
					<td>
						<label>Employer Zipcode</label>
						<%= builder.text_field :employer_zipcode, :class => "form_field_length" %>
					</td>
				</tr>
			</table>
		</li>
		<li class="table_row_full">
			<%= builder.label :referring_physician %>
			<%= builder.text_field :referred_by, :class => "form_field_length_full" %>
		</li>
		<!--<li>
			<label>Number of Dependents</label>
			<%#= builder.text_field :number_of_dependents, :class => "dependents" %>
		</li>
		<li>
			<%#= builder.label :relationship_to_responsible_party %>
			<%#= builder.text_field :relationship_to_responsible_party %>
	</li> MOVE TO 'RESPONSIBLE PARTY PAGE'-->
	
	
<% end %>
</fieldset>
