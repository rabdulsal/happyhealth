<fieldset class="demoBackground">
	<legend>Medical Information</legend>
	
	<table class="show-table-horizontal">
		<thead>
			<th>Conditions</th>
			<th>Age of onset</th>
			<th>Status</th>
		</thead>
	
		<% if form.medical.problems[0].condition? %>
			<% form.medical.problems.each do |problem| %>
			
				<tr>
					<td><%= problem.condition %></td>
					<td><%= problem.age_onset %></td>
					<td><%= problem.status %></td>
				</tr>

			<% end %>
					
		<% else %>
			<i>You have no conditions listed</i>
		<% end %>
	
	</table>

	<table class="show-table-short margin-top">
		<tr>
			<th rowspan="<%=@total_allergies%>">Allergies</th>

		<% if form.medical.allergies[0].info? %>		
			<% form.medical.allergies.each do |allergy| %>
				<td>
					<%= allergy.info %>
				</td>
		</tr>
			<% end %>
		<% else %>
			<tr><td><i>No allergies listed</i></td></tr>
		<% end %>
		
	</table><br />
	
	<table class="show-table-horizontal">
		<thead>
			<th>Medications</th>
			<th>Reason for Taking</th>
		</thead>
	
		<% if form.medical.medications[0].info? %>
			<% form.medical.medications.each do |medication| %>
			
				<tr>
					<td><%= medication.info %></td>
					<td><%= medication.reason %></td>
				</tr>

			<% end %>
					
		<% else %>
			<i>No medications listed</i>
		<% end %>
	
	</table>
</fieldset>
		
	