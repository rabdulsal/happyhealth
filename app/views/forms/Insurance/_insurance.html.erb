			<label>Policy Number</label>
			<%= builder.text_field :policy_number, :class => "policy-number" %>
		</li>
		<li>
			<label>Subscriber's Last Name</label>
			<%= builder.text_field :subscribers_last_name, :class => "subscriber-lastname" %>
		</li>
		<li>
			<label>Subscriber's First Name</label>
			<%= builder.text_field :subscribers_first_name, :class => "subscriber-firstname" %>
		</li>
		<li>
			<label>Subscriber's Address</label>
			<%= builder.text_field :subscribers_address, :class => "subscriber-address" %>
		</li>
		<li>
