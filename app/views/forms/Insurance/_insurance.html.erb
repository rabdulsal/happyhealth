		<li>
			<label>Subscriber's Phone</label>
			<%= builder.text_field :subscribers_phone, :class => "subscriber-phone" %>
		</li>
		<li>
			<label>Subscriber's Employer</label>
			<%= builder.text_field :subscribers_employer, :class => "subscriber-employer" %>
		</li>
	</ul>
	<hr />
