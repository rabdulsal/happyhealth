		<ul class="widget">
			<h3 class="margin-top">YOUR CARE TEAM</h3>
			
				<% current_user.doctors.each do |doctor| %>
					<% doc_name = doctor.title.slice(0..(doctor.title.index(','))) %>
					<fieldset class="dashAppointments">
						<h2 class="inline"><%= doc_name.delete(',') %></h3>
