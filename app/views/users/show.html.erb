<div class="widget" id="two">
	<!-- New Title: Previous -->
	<h2>Latest Notes</h2>
	<div class="dashAppointments">
		<% if @user.notes != []%>
			<% @user.notes[0..2].each do |note| %>
				<%= render 'note', :note => note%>
			<% end %>		
		<% else %>
			<i>You do not have any current notes. Make one now!</i>
		<% end %>
	</div>
</div>




